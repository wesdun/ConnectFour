{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "baseUrl": "./src/",
    "lib": [ "es2015", "dom" ]
  },
  "filesGlob": [
    "src/**/*.ts",
    "node_modules/@types/**/*.d.ts"
  ]
}